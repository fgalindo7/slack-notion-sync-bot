# Slack (Socket Mode)
SLACK_BOT_TOKEN=xoxb-...
SLACK_APP_LEVEL_TOKEN=xapp-...   # Must have scope: connections:write
SLACK_SIGNING_SECRET=ignore-or-actual-secret

# Notion
NOTION_TOKEN=secret_...

# Multi-channel mode (optional)
# Set to 'true' to load channel-database mappings from channel-mappings.json
# Set to 'false' (default) to use single-channel mode with WATCH_CHANNEL_ID + NOTION_DATABASE_ID
CHANNEL_DB_MAPPINGS=false

# Optional: Custom path to mappings file (defaults to ./channel-mappings.json)
# CHANNEL_DB_MAPPINGS_FILE=/path/to/your/mappings.json

# Single-channel mode (used when CHANNEL_DB_MAPPINGS=false)
WATCH_CHANNEL_ID=C0123456789
NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Allow threaded replies to trigger (default false)
ALLOW_THREADS=false